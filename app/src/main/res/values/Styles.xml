<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="container_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="operations_buttons" parent="container_button">
        <item name="android:background">@drawable/button_click_operator</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="numbers_buttons" parent="container_button">
        <item name="android:background">@drawable/button_click_number</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>